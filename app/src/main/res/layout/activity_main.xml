<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9A6625D"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFFCFC"
        android:fontFamily="@font/freckle_face"
        android:text="Help me!"
        android:textColor="#631515"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_egg"
        android:layout_width="251dp"
        android:layout_height="539dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:onClick="knock"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.603"
        app:srcCompat="@drawable/surprise_egg_kinder" />

    <TextView
        android:id="@+id/textview_counter"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:layout_marginBottom="196dp"
        android:fontFamily="@font/freckle_face"
        android:text="10"
        android:textColor="#A62A2A"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="reset"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_counter" />

</androidx.constraintlayout.widget.ConstraintLayout>